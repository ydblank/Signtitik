<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Signtitik.Pages.MenuPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Margin="10">
            <Button Text="back" Clicked="BackButtonClicked" HorizontalOptions="Start" WidthRequest="100"/>
            <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <StackLayout>
                    <Frame BackgroundColor="Gray">
                        <Image HeightRequest="80" Aspect="AspectFill"/>
                    </Frame>
                    <Label Text="COLORS" HorizontalOptions="CenterAndExpand"/>
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ItemTapped"/>
                    </StackLayout.GestureRecognizers>
                </StackLayout>
                <StackLayout Grid.Column="1">
                    <Frame BackgroundColor="Gray">
                        <Image HeightRequest="80" Aspect="AspectFill"/>
                    </Frame>
                    <Label Text="TEMPERATURE" HorizontalOptions="CenterAndExpand"/>
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ItemTapped"/>
                    </StackLayout.GestureRecognizers>
                </StackLayout>
                <StackLayout Grid.Row="1">
                    <Frame BackgroundColor="Gray">
                        <Image HeightRequest="80" Aspect="AspectFill"/>
                    </Frame>
                    <Label Text="SIZE" HorizontalOptions="CenterAndExpand"/>
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ItemTapped"/>
                    </StackLayout.GestureRecognizers>
                </StackLayout>
                <StackLayout Grid.Column="1" Grid.Row="1">
                    <Frame BackgroundColor="Gray">
                        <Image HeightRequest="80" Aspect="AspectFill"/>
                    </Frame>
                    <Label Text="NUMBERS" HorizontalOptions="CenterAndExpand"/>
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ItemTapped"/>
                    </StackLayout.GestureRecognizers>
                </StackLayout>
                <StackLayout Grid.Row="2">
                    <Frame BackgroundColor="Gray">
                        <Image HeightRequest="80" Aspect="AspectFill"/>
                    </Frame>
                    <Label Text="GREETINGS" HorizontalOptions="CenterAndExpand"/>
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ItemTapped"/>
                    </StackLayout.GestureRecognizers>
                </StackLayout>
                <StackLayout Grid.Column="1" Grid.Row="2">
                    <Frame BackgroundColor="Gray">
                        <Image HeightRequest="80" Aspect="AspectFill"/>
                    </Frame>
                    <Label Text="OTHER PHRASES" HorizontalOptions="CenterAndExpand"/>
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ItemTapped"/>
                    </StackLayout.GestureRecognizers>
                </StackLayout>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>