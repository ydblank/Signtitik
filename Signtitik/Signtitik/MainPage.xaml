<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Signtitik.MainPage">

    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Text="SIGNTITIK" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" FontSize="48"/>
        <StackLayout Grid.Row="1">
            <Button Text="Seller" Clicked="LandingButtonClicked" WidthRequest="256" HorizontalOptions="CenterAndExpand"/>
            <Button Text="Buyer" Clicked="LandingButtonClicked" WidthRequest="256" HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
    </Grid>

</ContentPage>
