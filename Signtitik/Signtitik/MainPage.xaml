<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Signtitik.MainPage">

    <StackLayout BackgroundColor="White">
    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Frame BackgroundColor="Transparent" Padding="12,24,12,0" CornerRadius="0">
            <Image x:Name="Logo" Source="logo_homescreen" Aspect="AspectFit" WidthRequest="240"></Image>
        </Frame>
            <StackLayout Grid.Row="1">
                <Button Text="Seller" ClassId="Seller" FontFamily="Feather" Clicked="LandingButtonClicked" WidthRequest="256" HeightRequest="68" Margin="10,10" BackgroundColor="#232620"  TextColor="White" HorizontalOptions="CenterAndExpand"/>

                <Button Text="Buyer" ClassId="Buyer" FontFamily="Feather" Clicked="LandingButtonClicked" WidthRequest="256" HeightRequest="68" Margin="10,10" BackgroundColor="#ED335F" TextColor="White" HorizontalOptions="CenterAndExpand"/>

                <Button Text="About Us" ClassId="About" FontFamily="Feather" Clicked="AboutButtonClicked" BackgroundColor="Transparent"/>
            </StackLayout>
    </Grid>
</StackLayout>
</ContentPage>
